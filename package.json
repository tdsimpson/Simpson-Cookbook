{
  "name": "simpson-cookbook",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "package-mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=assets/icons/mac/icon.icns --prune=true --out=release-builds",
    "package-win": "electron-packager . --overwrite --asar=true --platform=win32 --arch=ia32 --icon=assets/icons/win/icon.ico --prune=true --out=release-builds --version-string.CompanyName=CE --version-string.FileDescription=CE --version-string.ProductName=\"Simpson Cookbook\"",
    "package-linux": "electron-packager . --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/icon.png --prune=true --out=release-builds"
  },
  "dependencies": {
    "electron": "^1.8.8",
    "knex": "^0.20.4",
    "sqlite3": "^4.1.1"
  },
  "devDependencies": {
    "electron-packager": "^9.0.1",
    "electron-builder": "^21.2.0",
    "electron-rebuild": "^1.8.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tdsimpson/Simpson-Cookbook.git"
  },
  "author": "Taylor Simpson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tdsimpson/Simpson-Cookbook/issues"
  },
  "homepage": "https://github.com/tdsimpson/Simpson-Cookbook#readme"
}